<script src="/js/hamburger.js" defer></script>

<header class="header-wrap">
  <a href="/" class="my-auto">
    <h1 class="text-[1.8rem] font-bold text-white">Moriken web</h1>
  </a>
  <ul class="wide-nav">
    <li class="top-bar-content"><a class="w-full" href="/">profile</a></li>
    <li class="top-bar-content"><a href="/note">note</a></li>
    <li class="top-bar-content"><a href="/blog">blog</a></li>
    <li class="top-bar-content"><a href="/app">app</a></li>
  </ul>
  <div class="hamburger-btn">
    <span></span>
    <span></span>
    <span></span>
  </div>
</header>
<div class="overlay"></div>
<div class="sub-nav">
  <ul>
    <li><a href="/">profile</a></li>
    <li><a href="/note">note</a></li>
    <li><a href="/blog">blog</a></li>
    <li><a href="/app">app</a></li>
  </ul>
